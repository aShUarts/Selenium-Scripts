import java.sql.SQLException;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;


public class CRMClosure extends CRM{

	
	public void closure() throws SQLException
	{
		CRM c=new CRM();
		c.CRMAccount();
		DBConnection db= new DBConnection();
		
		c.driver.findElement(By.xpath("//input[@value='Email']")).sendKeys(db.dbconnection());
		c.driver.findElement(By.xpath(".//*[@id='crm_list']/tbody/tr/td[2]/a")).click();
		c.driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
		c.driver.findElement(By.id("button2")).click();
		c.driver.findElement(By.id("product_type")).sendKeys("Audio Conferencing");
		c.driver.findElement(By.xpath(".//*[@id='CrmCloserForm']/div[2]/input[1]")).click();
		
	}
		
		
		
		
	}
	
	

