
public class Box {
	
	double width;
	double length;
	double height;
	
	void displayvolume()
	{
		System.out.println("The Volume of Box is "+(width*length*height));
		System.out.println("\n");
	}
	
	void displayparameter()
	{
		System.out.println("The parameter of the Box is " +(width+length+height));
		System.out.println("\n");
	}
	
	public static void main(String args[])
	{
		Box b1=new Box();
		Box b2=new Box();
		b1.width=10;
		b1.length=12;
		b1.height=5.32;
		
		b2.width=11;
		b2.length=12;
		b2.height=13;
		
		b1.displayvolume();
		b1.displayparameter();
		b2.displayvolume();
		b2.displayparameter();
		
	}
}
