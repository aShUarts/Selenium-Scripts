import java.sql.SQLException;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;


public class CRMClosure extends CRM{

	
	public static void main(String args[]) throws SQLException
	{
		
		CRM.CRMAccount();
		DBConnection db= new DBConnection();
		
		
		CRM.driver.findElement(By.xpath("//input[@value='Email']")).sendKeys(db.dbconnection());
		CRM.driver.findElement(By.xpath(".//*[@id='crm_list']/tbody/tr/td[2]/a")).click();
		CRM.driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
		CRM.driver.findElement(By.id("button2")).click();
		CRM.driver.findElement(By.id("product_type")).sendKeys("Audio Conferencing");
		CRM.driver.findElement(By.xpath(".//*[@id='CrmCloserForm']/div[2]/input[1]")).click();
		}
		
		
		
		
	}
	
	

